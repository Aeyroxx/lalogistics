<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>L&A Logistics Services Portal</title>
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/img/favicon.svg">
  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Flatpickr for date picking -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <!-- Chart.js -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Sidebar -->
  <aside class="sidebar">
    <div class="sidebar-header">
      <div class="logo-container">
        <img src="/img/la-logo.svg" alt="L&A Logistics" class="sidebar-logo">
      </div>
    </div>
    <ul class="sidebar-menu">
      <li class="sidebar-item">
        <a href="/dashboard" class="sidebar-link <%= path === '/dashboard' ? 'active' : '' %>">
          <i class="fas fa-tachometer-alt mr-2"></i> Dashboard
        </a>
      </li>
      <% if (user && user.role === 'admin') { %>
      <li class="sidebar-item">
        <a href="/employees" class="sidebar-link <%= path === '/employees' ? 'active' : '' %>">
          <i class="fas fa-users mr-2"></i> Employees
        </a>
      </li>
      <% } %>
      <li class="sidebar-item">
        <a href="/audit" class="sidebar-link <%= path === '/audit' ? 'active' : '' %>">
          <i class="fas fa-clipboard-list mr-2"></i> Audit System
        </a>
      </li>
      <li class="sidebar-item">
        <a href="/audit/list" class="sidebar-link <%= path === '/audit/list' ? 'active' : '' %>">
          <i class="fas fa-list mr-2"></i> Audit Entries
        </a>
      </li>
      <li class="sidebar-item">
        <a href="/audit/reports" class="sidebar-link <%= path === '/audit/reports' ? 'active' : '' %>">
          <i class="fas fa-chart-bar mr-2"></i> Reports
        </a>
      </li>
      <li class="sidebar-item">
        <a href="/lost-parcels" class="sidebar-link <%= path === '/lost-parcels' ? 'active' : '' %>">
          <i class="fas fa-box mr-2"></i> Lost Parcels
        </a>
      </li>
      <li class="sidebar-item">
        <a href="/lost-parcels/add" class="sidebar-link <%= path === '/lost-parcels/add' ? 'active' : '' %>">
          <i class="fas fa-plus mr-2"></i> Log Lost Parcel
        </a>
      </li>
      <li class="sidebar-item">
        <a href="/employees/<%= user._id %>" class="sidebar-link <%= path === '/profile' ? 'active' : '' %>">
          <i class="fas fa-user mr-2"></i> My Profile
        </a>
      </li>
      <li class="sidebar-item">
        <a href="/logout" class="sidebar-link">
          <i class="fas fa-sign-out-alt mr-2"></i> Logout
        </a>
      </li>
    </ul>
  </aside>

  <!-- Main Content -->
  <div class="content-wrapper">
    <!-- Navbar -->
    <nav class="navbar mb-4">
      <div class="container-fluid">
        <button class="sidebar-toggle d-lg-none">
          <i class="fas fa-bars"></i>
        </button>
        <div class="navbar-brand">
          <img src="/img/la-logo.svg" alt="L&A Logistics" class="navbar-logo">
          <span class="brand-text">Services Portal</span>
        </div>
        <div class="user-dropdown">
          <span><i class="fas fa-user-circle"></i> <%= user ? user.name : 'Guest' %></span>
        </div>
      </div>
    </nav>

    <!-- Content Container -->
    <div class="container-fluid">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
      <% } %>

      <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success">
          <%= success %>
        </div>
      <% } %>

      <%- body %>
    </div>

    <!-- Footer -->
    <footer class="footer mt-5 py-3">
      <div class="container text-center">
        <p>&copy; <%= new Date().getFullYear() %> L&A Logistics Services. All rights reserved.</p>
      </div>
    </footer>
  </div>

  <!-- JavaScript Dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.0/build/qrcode.min.js"></script>
  <!-- Custom JavaScript -->
  <script src="/js/main.js"></script>
</body>
</html>
