<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"><i class="fas fa-box me-2"></i> Lost Parcels</h3>
          <div class="ms-auto">
            <a href="/lost-parcels/add" class="btn btn-danger">
              <i class="fas fa-plus me-2"></i> Log Lost Parcel
            </a>
          </div>
        </div>
        <div class="card-body">
          <% if (parcels && parcels.length > 0) { %>
            <div class="row">
              <% parcels.forEach(parcel => { %>
                <div class="col-md-6 mb-4">
                  <div class="parcel-card">
                    <div class="parcel-info">
                      <h5 class="mb-2">
                        <strong><%= parcel.trackingNumber %></strong>
                        <span class="parcel-status parcel-status-<%= parcel.status || 'reported' %>">
                          <%= (parcel.status || 'reported').charAt(0).toUpperCase() + (parcel.status || 'reported').slice(1) %>
                        </span>
                      </h5>
                      <div class="mb-2">
                        <strong>Customer:</strong> <%= parcel.senderName %>
                      </div>
                      <div class="mb-2">
                        <strong>Phone:</strong> <%= parcel.customerPhone || 'N/A' %>
                      </div>
                      <div class="mb-2">
                        <strong>Address:</strong> <%= parcel.customerAddress %>
                      </div>
                      <div class="mb-2">
                        <strong>Courier:</strong> 
                        <span class="badge badge-<%= parcel.courierType === 'SPX' ? 'primary' : parcel.courierType === 'Flash' ? 'info' : 'secondary' %>">
                          <%= parcel.courierType %>
                        </span>
                      </div>
                      <div class="mb-2">
                        <strong>Date Reported:</strong> <%= new Date(parcel.dateReported).toLocaleDateString() %>
                      </div>
                      <% if (parcel.estimatedValue) { %>
                        <div class="mb-2">
                          <strong>Est. Value:</strong> <span class="text-success">â‚±<%= parcel.estimatedValue.toFixed(2) %></span>
                        </div>
                      <% } %>
                      <% if (parcel.lastKnownLocation) { %>
                        <div class="mb-2">
                          <strong>Last Known Location:</strong> <%= parcel.lastKnownLocation %>
                        </div>
                      <% } %>
                      <% if (parcel.description) { %>
                        <div class="mb-2">
                          <strong>Description:</strong> <%= parcel.description %>
                        </div>
                      <% } %>
                      <div class="mt-3">
                        <div class="btn-group" role="group">
                          <a href="/lost-parcels/<%= parcel._id %>" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i> View
                          </a>
                          <a href="/lost-parcels/<%= parcel._id %>/edit" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-edit"></i> Edit
                          </a>
                          <button class="btn btn-sm btn-outline-danger delete-btn" data-id="<%= parcel._id %>">
                            <i class="fas fa-trash"></i> Delete
                          </button>
                        </div>
                      </div>
                    </div>
                    <% if (parcel.barcodeData) { %>
                      <div class="parcel-barcode">
                        <div class="text-center">
                          <div class="mb-2">
                            <%- parcel.barcodeData %>
                          </div>
                          <small class="text-muted">Tracking Barcode</small>
                        </div>
                      </div>
                    <% } %>
                  </div>
                </div>
              <% }); %>
            </div>
          <% } else { %>
            <div class="text-center py-5">
              <i class="fas fa-box fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">No lost parcels found</h5>
              <p class="text-muted">All parcels are accounted for!</p>
              <a href="/lost-parcels/add" class="btn btn-danger">
                <i class="fas fa-plus me-2"></i> Log Lost Parcel
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
