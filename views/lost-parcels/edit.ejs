<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">
            <i class="fas fa-edit me-2"></i> 
            Edit Lost Parcel
          </h3>
        </div>
        <div class="card-body">
          <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger">
              <%= error %>
            </div>
          <% } %>
          
          <form method="POST" action="/lost-parcels/<%= parcel._id %>?_method=PUT">
            <input type="hidden" name="_method" value="PUT">
            
            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="trackingNumber" class="form-label">Tracking Number <span class="text-danger">*</span></label>
                  <input type="text" id="trackingNumber" name="trackingNumber" class="form-control" value="<%= parcel.trackingNumber %>" required>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="courierType" class="form-label">Courier Type <span class="text-danger">*</span></label>
                  <select id="courierType" name="courierType" class="form-control" required>
                    <option value="">Select Courier</option>
                    <option value="SPX Express" <%= parcel.courier === 'SPX Express' ? 'selected' : '' %>>SPX Express</option>
                    <option value="Flash Express" <%= parcel.courier === 'Flash Express' ? 'selected' : '' %>>Flash Express</option>
                    <option value="J&T Express" <%= parcel.courier === 'J&T Express' ? 'selected' : '' %>>J&T Express</option>
                    <option value="Ninja Van" <%= parcel.courier === 'Ninja Van' ? 'selected' : '' %>>Ninja Van</option>
                    <option value="LBC" <%= parcel.courier === 'LBC' ? 'selected' : '' %>>LBC</option>
                    <option value="2GO" <%= parcel.courier === '2GO' ? 'selected' : '' %>>2GO</option>
                    <option value="Other" <%= parcel.courier === 'Other' ? 'selected' : '' %>>Other</option>
                  </select>
                </div>
              </div>
            </div>
            
            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="dateReported" class="form-label">Date Reported <span class="text-danger">*</span></label>
                  <input type="date" id="dateReported" name="dateReported" class="form-control" value="<%= parcel.dateTimeScanned.toISOString().split('T')[0] %>" required>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="status" class="form-label">Status</label>
                  <select id="status" name="status" class="form-control">
                    <option value="reported" <%= parcel.status === 'reported' ? 'selected' : '' %>>Reported</option>
                    <option value="investigating" <%= parcel.status === 'investigating' ? 'selected' : '' %>>Investigating</option>
                    <option value="found" <%= parcel.status === 'found' ? 'selected' : '' %>>Found</option>
                    <option value="missing" <%= parcel.status === 'missing' ? 'selected' : '' %>>Missing</option>
                    <option value="returned" <%= parcel.status === 'returned' ? 'selected' : '' %>>Returned</option>
                    <option value="closed" <%= parcel.status === 'closed' ? 'selected' : '' %>>Closed</option>
                  </select>
                </div>
              </div>
            </div>
            
            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="customerName" class="form-label">Customer Name <span class="text-danger">*</span></label>
                  <input type="text" id="customerName" name="customerName" class="form-control" value="<%= parcel.senderName %>" required>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="customerPhone" class="form-label">Customer Phone</label>
                  <input type="tel" id="customerPhone" name="customerPhone" class="form-control" value="<%= parcel.customerPhone || '' %>">
                </div>
              </div>
            </div>
            
            <div class="form-group mb-3">
              <label for="customerAddress" class="form-label">Customer Address</label>
              <textarea id="customerAddress" name="customerAddress" class="form-control" rows="3"><%= parcel.customerAddress || '' %></textarea>
            </div>
            
            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="lastKnownLocation" class="form-label">Last Known Location</label>
                  <input type="text" id="lastKnownLocation" name="lastKnownLocation" class="form-control" value="<%= parcel.lastKnownLocation || '' %>">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="estimatedValue" class="form-label">Estimated Value (â‚±)</label>
                  <input type="number" id="estimatedValue" name="estimatedValue" class="form-control" step="0.01" value="<%= parcel.estimatedValue || '' %>">
                </div>
              </div>
            </div>
            
            <div class="form-group mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea id="description" name="description" class="form-control" rows="3" placeholder="Describe the parcel contents, size, etc."><%= parcel.description || '' %></textarea>
            </div>
            
            <div class="form-group mb-3">
              <label for="notes" class="form-label">Notes</label>
              <textarea id="notes" name="notes" class="form-control" rows="3" placeholder="Any additional notes or investigation details"><%= parcel.notes || '' %></textarea>
            </div>
            
            <div class="d-flex justify-content-between">
              <a href="/lost-parcels/view/<%= parcel._id %>" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i> Cancel
              </a>
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i> Update Lost Parcel
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
