<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">
            <i class="fas fa-exclamation-triangle me-2"></i> 
            Lost Parcel Details
          </h3>
          <div class="ms-auto">
            <% if (user.role === 'admin') { %>
              <a href="/lost-parcels/<%= parcel._id %>/edit" class="btn btn-primary btn-sm me-2">
                <i class="fas fa-edit me-1"></i> Edit
              </a>
              <button class="btn btn-danger btn-sm" onclick="deleteLostParcel('<%= parcel._id %>')">
                <i class="fas fa-trash me-1"></i> Delete
              </button>
            <% } %>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h5>Parcel Information</h5>
              <table class="table table-borderless">
                <tr>
                  <td><strong>Tracking Number:</strong></td>
                  <td><code><%= parcel.trackingNumber %></code></td>
                </tr>
                <tr>
                  <td><strong>Courier:</strong></td>
                  <td><%= parcel.courier %></td>
                </tr>
                <tr>
                  <td><strong>Date Reported:</strong></td>
                  <td><%= moment(parcel.dateTimeScanned).format('MMMM D, YYYY') %></td>
                </tr>
                <tr>
                  <td><strong>Status:</strong></td>
                  <td>
                    <span class="parcel-status parcel-status-<%= parcel.status || 'reported' %>">
                      <%= (parcel.status || 'reported').charAt(0).toUpperCase() + (parcel.status || 'reported').slice(1) %>
                    </span>
                  </td>
                </tr>
                <% if (parcel.estimatedValue) { %>
                  <tr>
                    <td><strong>Estimated Value:</strong></td>
                    <td>â‚±<%= parcel.estimatedValue.toFixed(2) %></td>
                  </tr>
                <% } %>
              </table>
            </div>
            <div class="col-md-6">
              <h5>Customer Information</h5>
              <table class="table table-borderless">
                <tr>
                  <td><strong>Customer Name:</strong></td>
                  <td><%= parcel.senderName %></td>
                </tr>
                <% if (parcel.customerPhone) { %>
                  <tr>
                    <td><strong>Phone:</strong></td>
                    <td><%= parcel.customerPhone %></td>
                  </tr>
                <% } %>
                <% if (parcel.customerAddress) { %>
                  <tr>
                    <td><strong>Address:</strong></td>
                    <td><%= parcel.customerAddress %></td>
                  </tr>
                <% } %>
                <% if (parcel.lastKnownLocation) { %>
                  <tr>
                    <td><strong>Last Known Location:</strong></td>
                    <td><%= parcel.lastKnownLocation %></td>
                  </tr>
                <% } %>
              </table>
            </div>
          </div>
          
          <% if (parcel.description) { %>
            <div class="row mt-4">
              <div class="col-md-12">
                <h5>Description</h5>
                <div class="alert alert-info">
                  <%= parcel.description %>
                </div>
              </div>
            </div>
          <% } %>
          
          <% if (parcel.notes) { %>
            <div class="row mt-4">
              <div class="col-md-12">
                <h5>Additional Notes</h5>
                <div class="alert alert-warning">
                  <%= parcel.notes %>
                </div>
              </div>
            </div>
          <% } %>
          
          <% if (parcel.qrCodeImage) { %>
            <div class="row mt-4">
              <div class="col-md-6">
                <h5>QR Code</h5>
                <div class="text-center">
                  <img src="/uploads/<%= parcel.qrCodeImage %>" alt="QR Code" class="img-fluid" style="max-width: 200px;">
                </div>
              </div>
            </div>
          <% } %>
          
          <div class="row mt-4">
            <div class="col-md-12">
              <h5>Record Information</h5>
              <table class="table table-borderless">
                <tr>
                  <td><strong>Reported By:</strong></td>
                  <td><%= parcel.createdBy ? parcel.createdBy.name : 'Unknown' %></td>
                </tr>
                <tr>
                  <td><strong>Created At:</strong></td>
                  <td><%= moment(parcel.createdAt).format('MMMM D, YYYY [at] h:mm A') %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <a href="/lost-parcels" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i> Back to List
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.parcel-status {
  padding: 0.25rem 0.5rem;
  border-radius: 0.25rem;
  font-size: 0.875rem;
  font-weight: 500;
}

.parcel-status-reported {
  background-color: #fef3c7;
  color: #92400e;
}

.parcel-status-investigating,
.parcel-status-under-investigation {
  background-color: #dbeafe;
  color: #1e40af;
}

.parcel-status-found {
  background-color: #d1fae5;
  color: #065f46;
}

.parcel-status-lost,
.parcel-status-confirmed-lost {
  background-color: #fee2e2;
  color: #991b1b;
</style>
