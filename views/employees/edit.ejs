<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"><i class="fas fa-user-edit me-2"></i> Edit Employee Profile</h3>
        </div>
        <div class="card-body">
          <form method="POST" action="/employees/<%= employee._id %>" enctype="multipart/form-data">
            <input type="hidden" name="_method" value="PUT">
            
            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="name" class="form-label">Full Name <span class="text-danger">*</span></label>
                  <input type="text" id="name" name="name" class="form-control" value="<%= employee.name %>" required>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                  <input type="email" id="email" name="email" class="form-control" value="<%= employee.email %>" required>
                </div>
              </div>
            </div>
            
            <% if (employee.employeeNumber) { %>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group mb-3">
                    <label for="employeeNumber" class="form-label">Employee Number</label>
                    <input type="text" id="employeeNumber" name="employeeNumber" class="form-control" value="<%= employee.employeeNumber %>" readonly>
                    <small class="text-muted">Employee number is automatically generated and cannot be changed</small>
                  </div>
                </div>
              </div>
            <% } %>
            
            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="phone" class="form-label">Phone Number</label>
                  <input type="tel" id="phone" name="phone" class="form-control" value="<%= profile && profile.phone || '' %>">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="position" class="form-label">Position</label>
                  <input type="text" id="position" name="position" class="form-control" value="<%= profile && profile.position || '' %>">
                </div>
              </div>
            </div>
            
            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="department" class="form-label">Department</label>
                  <input type="text" id="department" name="department" class="form-control" value="<%= profile && profile.department || '' %>">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="profilePicture" class="form-label">Profile Picture</label>
                  <input type="file" id="profilePicture" name="profilePicture" class="form-control" accept="image/*">
                  <% if (profile && profile.profilePicture) { %>
                    <small class="text-muted">Current: <%= profile.profilePicture.split('/').pop() %></small>
                  <% } %>
                </div>
              </div>
            </div>
            
            <div class="form-group mb-3">
              <label for="address" class="form-label">Address</label>
              <textarea id="address" name="address" class="form-control" rows="3"><%= profile && profile.address || '' %></textarea>
            </div>
            
            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="idDocument1" class="form-label">ID Document 1</label>
                  <input type="file" id="idDocument1" name="idDocument1" class="form-control" accept="image/*,.pdf">
                  <% if (profile && profile.idDocument1) { %>
                    <small class="text-muted">Current: <%= profile.idDocument1.split('/').pop() %></small>
                  <% } %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="idDocument2" class="form-label">ID Document 2</label>
                  <input type="file" id="idDocument2" name="idDocument2" class="form-control" accept="image/*,.pdf">
                  <% if (profile && profile.idDocument2) { %>
                    <small class="text-muted">Current: <%= profile.idDocument2.split('/').pop() %></small>
                  <% } %>
                </div>
              </div>
            </div>
            
            <% if (user.role === 'admin') { %>
              <div class="form-group mb-3">
                <label for="password" class="form-label">New Password (leave blank to keep current)</label>
                <input type="password" id="password" name="password" class="form-control">
                <small class="text-muted">Only fill this field if you want to change the password</small>
              </div>
            <% } %>
            
            <div class="d-flex justify-content-between">
              <a href="/employees/<%= employee._id %>" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i> Back
              </a>
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i> Update Profile
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
