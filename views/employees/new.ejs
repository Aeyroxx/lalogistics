<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"><i class="fas fa-user-plus me-2"></i> Add New Employee</h3>
        </div>
        <div class="card-body">
          <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger">
              <%= error %>
            </div>
          <% } %>
          
          <form method="POST" action="/employees">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="name" class="form-label">Full Name <span class="text-danger">*</span></label>
                  <input type="text" id="name" name="name" class="form-control" required placeholder="Enter full name">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="email" class="form-label">Email Address <span class="text-danger">*</span></label>
                  <input type="email" id="email" name="email" class="form-control" required placeholder="Enter email address">
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                  <input type="password" id="password" name="password" class="form-control" required placeholder="Enter password">
                </div>
              </div>
            </div>

            <div class="alert alert-info">
              <i class="fas fa-info-circle me-2"></i>
              <strong>Note:</strong> Employee number will be auto-generated. Additional profile details can be added later through the employee edit form.
            </div>

            <div class="d-flex justify-content-between">
              <a href="/employees" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i> Back to List
              </a>
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i> Create Employee
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
