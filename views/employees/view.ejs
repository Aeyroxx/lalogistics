<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"><i class="fas fa-user me-2"></i> Employee Profile</h3>
          <div class="ms-auto">
            <a href="/employees/<%= employee._id %>/edit" class="btn btn-primary btn-sm">
              <i class="fas fa-edit me-2"></i> Edit Profile
            </a>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <div class="text-center mb-4">
                <% if (profile && profile.profilePicture) { %>
                  <img src="<%= profile.profilePicture %>" alt="Profile Picture" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                <% } else { %>
                  <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 150px; height: 150px;">
                    <i class="fas fa-user fa-4x text-white"></i>
                  </div>
                <% } %>
                <h4 class="mt-3"><%= employee.name %></h4>
                <p class="text-muted"><%= profile && profile.position || 'Employee' %></p>
              </div>
            </div>
            <div class="col-md-8">
              <h5>Basic Information</h5>
              <table class="table table-borderless">
                <tr>
                  <td><strong>Name:</strong></td>
                  <td><%= employee.name %></td>
                </tr>
                <% if (employee.employeeNumber) { %>
                  <tr>
                    <td><strong>Employee Number:</strong></td>
                    <td><span class="badge bg-secondary"><%= employee.employeeNumber %></span></td>
                  </tr>
                <% } %>
                <tr>
                  <td><strong>Email:</strong></td>
                  <td><%= employee.email %></td>
                </tr>
                <tr>
                  <td><strong>Role:</strong></td>
                  <td><span class="badge bg-primary"><%= employee.role %></span></td>
                </tr>
                <% if (profile) { %>
                  <% if (profile.phone) { %>
                    <tr>
                      <td><strong>Phone:</strong></td>
                      <td><%= profile.phone %></td>
                    </tr>
                  <% } %>
                  <% if (profile.position) { %>
                    <tr>
                      <td><strong>Position:</strong></td>
                      <td><%= profile.position %></td>
                    </tr>
                  <% } %>
                  <% if (profile.department) { %>
                    <tr>
                      <td><strong>Department:</strong></td>
                      <td><%= profile.department %></td>
                    </tr>
                  <% } %>
                  <% if (profile.address) { %>
                    <tr>
                      <td><strong>Address:</strong></td>
                      <td><%= profile.address %></td>
                    </tr>
                  <% } %>
                <% } %>
                <tr>
                  <td><strong>Member Since:</strong></td>
                  <td><%= new Date(employee.createdAt).toLocaleDateString() %></td>
                </tr>
              </table>
            </div>
          </div>
          
          <% if (profile && (profile.idFront || profile.idBack)) { %>
            <hr>
            <h5>ID Documents</h5>
            <div class="row">
              <% if (profile.idFront) { %>
                <div class="col-md-6">
                  <h6>ID Front</h6>
                  <img src="<%= profile.idFront %>" alt="ID Front" class="img-fluid border rounded">
                </div>
              <% } %>
              <% if (profile.idBack) { %>
                <div class="col-md-6">
                  <h6>ID Back</h6>
                  <img src="<%= profile.idBack %>" alt="ID Back" class="img-fluid border rounded">
                </div>
              <% } %>
            </div>
          <% } %>
          
          <div class="mt-4">
            <a href="/employees" class="btn btn-secondary">
              <i class="fas fa-arrow-left me-2"></i> Back to Employees
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
